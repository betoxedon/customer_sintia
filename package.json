{
   "name": "sintia-customer",
   "private": true,
   "version": "1.0.0",
   "type": "module",
   "scripts": {
      "build-only": "vite build",
      "build": "run-p type-check \"build-only {@}\" --",
      "type-check": "vue-tsc --noEmit -p tsconfig.app.json --composite false",
      "format": "prettier --write .",
      "dev": "vite --open"
   },
   "prettier": {
      "arrowParens": "always",
      "semi": false,
      "singleQuote": true,
      "tabWidth": 3,
      "bracketSameLine": true,
      "bracketSpacing": true,
      "htmlWhitespaceSensitivity": "ignore",
      "trailingComma": "all",
      "printWidth": 85,
      "endOfLine": "lf",
      "singleAttributePerLine": false,
      "vueIndentScriptAndStyle": true,
      "plugins": [
         "prettier-plugin-tailwindcss"
      ]
   },
   "dependencies": {
      "@headlessui/vue": "^1.7.19",
      "@heroicons/vue": "^2.1.3",
      "@vee-validate/zod": "^4.12.4",
      "@vueuse/core": "^10.9.0",
      "axios": "^1.6.5",
      "firebase": "^10.5.2",
      "i18next": "^23.7.13",
      "maska": "^2.1.10",
      "pinia": "^2.1.7",
      "vee-validate": "^4.11.8",
      "vue": "^3.3.4",
      "vue-markdown-render": "^2.1.1",
      "vue-router": "^4.2.5",
      "vue3-tabs-component": "^1.3.7",
      "zod": "^3.22.4",
      "zod-i18n-map": "^2.23.0"
   },
   "devDependencies": {
      "@tailwindcss/forms": "^0.5.6",
      "@tsconfig/node18": "^18.2.2",
      "@types/markdown-it": "^14.0.1",
      "@types/node": "^18.18.5",
      "@vitejs/plugin-vue": "^4.4.0",
      "@vue/tsconfig": "^0.4.0",
      "autoprefixer": "^10.4.16",
      "npm-run-all2": "^6.1.1",
      "postcss": "^8.4.31",
      "prettier": "^3.0.3",
      "prettier-plugin-tailwindcss": "^0.5.12",
      "tailwindcss": "^3.4.1",
      "typescript": "~5.2.0",
      "vite": "^4.4.11",
      "vue-tsc": "^1.8.19"
   },
   "engines": {
      "node": "20.11.1"
   }
}
